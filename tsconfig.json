{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"isolatedModules": false,
		"downlevelIteration": true,
		"module": "commonjs",
		"noLib": true,
		"strict": true,
		"target": "es6",
		"typeRoots": [ "node_modules/@rbxts" ],
		"moduleResolution": "Node",

		"rootDir": "src",
		"outDir": "out",

		"declaration": true,

		"jsx": "react",
		"jsxFactory": "Roact.createElement"
	}
}
